@model PetStore.Models.DTOs.UserResponseDTO

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Thông tin cá nhân</h3>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <img src="@(Model.AvatarUrl ?? "https://via.placeholder.com/150")" alt="Avatar" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                </div>
                <dl class="row">
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                    <dt class="col-sm-3">Họ</dt>
                    <dd class="col-sm-9">@Model.LastName</dd>
                    <dt class="col-sm-3">Tên</dt>
                    <dd class="col-sm-9">@Model.FirstName</dd>
                    <dt class="col-sm-3">Số điện thoại</dt>
                    <dd class="col-sm-9">@Model.PhoneNumber</dd>
                    <dt class="col-sm-3">Địa chỉ</dt>
                    <dd class="col-sm-9">@Model.Address</dd>
                </dl>
                <div class="text-center">
                    <a asp-action="EditProfile" class="btn btn-primary"><i class="bi bi-pencil"></i> Chỉnh sửa</a>
                </div>
            </div>
        </div>
    </div>
</div>