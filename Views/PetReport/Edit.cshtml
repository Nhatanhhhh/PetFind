@model PetStore.Models.DTOs.PetReportUpdateDTO

@{
    ViewData["Title"] = "Chỉnh sửa báo cáo";
}

<div class="container mt-4">
    <h2>Chỉnh sửa báo cáo</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Type">Loại báo cáo</label>
            <select asp-for="Type" class="form-control">
                <option value="Lost">Thú cưng bị mất</option>
                <option value="Found">Thú cưng được tìm thấy</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Species">Loài</label>
            <select asp-for="Species" class="form-control">
                <option value="Dog">Chó</option>
                <option value="Cat">Mèo</option>
                <option value="Other">Khác</option>
            </select>
            <span asp-validation-for="Species" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Title">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PetName">Tên thú cưng</label>
            <input asp-for="PetName" class="form-control" />
            <span asp-validation-for="PetName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Breed">Giống</label>
            <input asp-for="Breed" class="form-control" />
            <span asp-validation-for="Breed" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Color">Màu sắc</label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="District">Quận/Huyện</label>
            <input asp-for="District" class="form-control" />
            <span asp-validation-for="District" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City">Thành phố</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LostOrFoundDate">Ngày mất/tìm thấy</label>
            <input asp-for="LostOrFoundDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="LostOrFoundDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label fw-semibold">Hình ảnh thú cưng</label>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label">Upload ảnh từ máy tính</label>
                        <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" />
                        <div class="form-text">Hỗ trợ: JPG, PNG, GIF, BMP, WebP (tối đa 10MB)</div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Hoặc nhập URL ảnh</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/pet-image.jpg" />
                        <div class="form-text">Nhập URL ảnh từ internet</div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mt-2">
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail" style="max-width: 200px;" />
                    <small class="text-muted d-block">Ảnh hiện tại</small>
                </div>
            }
            <div class="alert alert-info mt-2">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Lưu ý:</strong> Nếu bạn upload file, nó sẽ được ưu tiên hơn URL. Nếu không có file upload, URL sẽ được sử dụng.
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ContactName">Tên liên hệ</label>
            <input asp-for="ContactName" class="form-control" />
            <span asp-validation-for="ContactName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactPhone">Số điện thoại</label>
            <input asp-for="ContactPhone" class="form-control" />
            <span asp-validation-for="ContactPhone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactEmail">Email</label>
            <input asp-for="ContactEmail" class="form-control" type="email" />
            <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactNote">Ghi chú liên hệ</label>
            <textarea asp-for="ContactNote" class="form-control" rows="2"></textarea>
            <span asp-validation-for="ContactNote" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 